@model EmpManagment.Bol.ViewModels.UserAreaViewModels.ViewModels.CreateRoleViewModel
@{
    ViewBag.Title = "Create Role";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="form-group  row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-4">
                            <h3>Create Role</h3>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                    @using (Html.BeginForm("CreateRole", "Administration", new { Area = "User" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group  row">
                            <div class="col-sm-2"></div>
                            <label class="col-sm-2 col-form-label" >Name</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.RoleName, htmlAttributes: new { @class = "form-control", @placeholder = "Name" })
                                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="text-danger">@Html.ValidationSummary()</div>
                        <div class="form-group  row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-primary block full-width m-b">Create Role</button>
                            </div>
                            <div class="col-sm-2">

                            </div>
                        </div>
                        <div class="form-group  row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-4">
                                <h3>Back to list roles</h3>
                                @Html.ActionLink("Role Manager", "ListRoles", "Administration", new { area = "User" }, htmlAttributes: new { @class = "btn btn-sm btn-white btn-block" })
                            </div>
                            <div class="col-sm-4">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
